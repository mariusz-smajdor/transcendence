# Environment Configuration for Transcendence Project
# Copy this file to .env and update the values for your setup

# Server Configuration
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
COOKIES_SECRET=your-super-secret-cookies-key-here-change-this-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Network Configuration
# For local development (single machine)
SERVER_HOST=localhost
CLIENT_HOST=localhost

# For remote access (multiple machines)
# SERVER_HOST=0.0.0.0
# CLIENT_HOST=0.0.0.0

# For specific IP binding (replace with your actual IP)
# SERVER_HOST=192.168.1.100
# CLIENT_HOST=192.168.1.100

# SSL Configuration
SSL_ENABLED=true
SSL_KEY_PATH=./server/certs/server.key
SSL_CERT_PATH=./server/certs/server.crt

# Client SSL Configuration
CLIENT_SSL_KEY_PATH=./client/certs/localhost.key
CLIENT_SSL_CERT_PATH=./client/certs/localhost.crt
